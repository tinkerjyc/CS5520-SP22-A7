<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StickersDisplayActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <ImageButton
                android:id="@+id/sticker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="85dp"
                android:layout_marginTop="40dp"
                android:onClick="onClickImageButton"
                android:padding="10dp"
                android:src="@drawable/sticker_1"
                android:tag="sticker1" />

            <ImageButton
                android:id="@+id/sticker2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker1"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="80dp"
                android:background="#005"
                android:onClick="onClickImageButton"
                android:padding="10dp"
                android:src="@drawable/sticker_2"
                android:tag="sticker2" />

            <ImageButton
                android:id="@+id/sticker3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker2"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="80dp"
                android:background="#005"
                android:onClick="onClickImageButton"
                android:padding="10dp"
                android:src="@drawable/sticker_3"
                android:tag="sticker3" />

            <ImageButton
                android:id="@+id/sticker4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker3"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="80dp"
                android:background="#005"
                android:onClick="onClickImageButton"
                android:padding="10dp"
                android:src="@drawable/sticker_4"
                android:tag="sticker4" />

            <ImageButton
                android:id="@+id/sticker5"
                android:tag="sticker5"
                android:onClick="onClickImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker4"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="80dp"
                android:background="#005"
                android:padding="10dp"
                android:src="@drawable/sticker_5" />

            <ImageButton
                android:id="@+id/sticker6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker5"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="81dp"
                android:layout_marginEnd="53dp"
                android:background="#005"
                android:onClick="onClickImageButton"
                android:padding="10dp"
                android:src="@drawable/sticker_6"
                android:tag="sticker6" />

            <ImageButton
                android:id="@+id/sticker7"
                android:tag="sticker7"
                android:onClick="onClickImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker6"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="80dp"
                android:background="#005"
                android:padding="10dp"
                android:src="@drawable/sticker_7" />

            <ImageButton
                android:id="@+id/sticker8"
                android:tag="sticker8"
                android:onClick="onClickImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker7"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="80dp"
                android:background="#005"
                android:padding="10dp"
                android:src="@drawable/sticker_8" />

            <ImageButton
                android:id="@+id/sticker9"
                android:tag="sticker9"
                android:onClick="onClickImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker8"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="80dp"
                android:background="#005"
                android:padding="10dp"
                android:src="@drawable/sticker_9" />

            <ImageButton
                android:id="@+id/sticker10"
                android:tag="sticker10"
                android:onClick="onClickImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker9"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="80dp"
                android:background="#005"
                android:padding="10dp"
                android:src="@drawable/sticker_10" />

            <ImageButton
                android:id="@+id/sticker11"
                android:tag="sticker11"
                android:onClick="onClickImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker10"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="88dp"
                android:layout_marginEnd="95dp"
                android:background="#005"
                android:padding="10dp"
                android:src="@drawable/sticker_11" />

            <ImageButton
                android:id="@+id/sticker12"
                android:tag="sticker12"
                android:onClick="onClickImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker11"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="52dp"
                android:background="#005"
                android:padding="10dp"
                android:src="@drawable/sticker_12" />

            <ImageButton
                android:id="@+id/sticker13"
                android:tag="sticker13"
                android:onClick="onClickImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker12"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="80dp"
                android:background="#005"
                android:padding="10dp"
                android:src="@drawable/sticker_13" />
        </RelativeLayout>

        <TextView
            android:id="@+id/sendStickerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>